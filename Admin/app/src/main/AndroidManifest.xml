<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.laundromat.admin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LaundromatAdmin"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".activities.TransactionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ServiceTypeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TripActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TripsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.OrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CustomerProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DriverProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PickLocationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MerchantProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DriverRequestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MerchantRequestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ServiceTypesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.OrdersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CustomersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DriversActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MerchantsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.NewDriversActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.NewMerchantsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DashboardActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>