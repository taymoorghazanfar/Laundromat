<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00BCD4"
            android:padding="15dp"
            android:text="Vehicle Details"
            android:textColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Images"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="7dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/image_view_vehicle_front"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:adjustViewBounds="true"
                                    android:foreground="@drawable/ripple_anim"
                                    android:background="#00BCD4"
                                    android:scaleType="centerCrop" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        style="@android:style/TextAppearance.Small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="#33FFFFFF"
                                        android:padding="3dp"
                                        android:text="Upload Front Image"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="7dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/image_view_vehicle_back"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:adjustViewBounds="true"
                                    android:foreground="@drawable/ripple_anim"
                                    android:background="#00BCD4"
                                    android:scaleType="centerCrop" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        style="@android:style/TextAppearance.Small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="#33FFFFFF"
                                        android:padding="3dp"
                                        android:text="Upload Back Image"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"

                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="7dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/image_view_vehicle_left"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:adjustViewBounds="true"
                                    android:foreground="@drawable/ripple_anim"
                                    android:background="#00BCD4"
                                    android:scaleType="centerCrop" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        style="@android:style/TextAppearance.Small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="#33FFFFFF"
                                        android:padding="3dp"
                                        android:text="Upload Left Image"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="7dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/image_view_vehicle_right"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:adjustViewBounds="true"
                                    android:foreground="@drawable/ripple_anim"
                                    android:background="#00BCD4"
                                    android:scaleType="centerCrop" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        style="@android:style/TextAppearance.Small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="#33FFFFFF"
                                        android:padding="3dp"
                                        android:text="Upload Right Image"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/button_cancel"
                        style="@android:style/TextAppearance.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/button_update"
                        style="@android:style/TextAppearance.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:text="Update"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>