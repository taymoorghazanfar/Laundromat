<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.VehicleSignupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00BCD4"
            android:padding="15dp"
            android:text="Vehicle Details"
            android:textColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            style="@android:style/TextAppearance.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Images"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/colorLine" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginEnd="7dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="10dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/image_view_vehicle_front"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:adjustViewBounds="true"
                                            android:background="#00BCD4"
                                            android:foreground="@drawable/ripple_anim"
                                            android:scaleType="centerCrop" />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true">

                                            <TextView
                                                style="@android:style/TextAppearance.Small"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="#33FFFFFF"
                                                android:padding="3dp"
                                                android:text="Upload Front Image"
                                                android:textStyle="bold" />
                                        </RelativeLayout>
                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="7dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="10dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/image_view_vehicle_back"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:adjustViewBounds="true"
                                            android:background="#00BCD4"
                                            android:foreground="@drawable/ripple_anim"
                                            android:scaleType="centerCrop" />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true">

                                            <TextView
                                                style="@android:style/TextAppearance.Small"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="#33FFFFFF"
                                                android:padding="3dp"
                                                android:text="Upload Back Image"
                                                android:textStyle="bold" />
                                        </RelativeLayout>
                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"

                                    android:layout_height="150dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginEnd="7dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="10dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/image_view_vehicle_left"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:adjustViewBounds="true"
                                            android:background="#00BCD4"
                                            android:foreground="@drawable/ripple_anim"
                                            android:scaleType="centerCrop" />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true">

                                            <TextView
                                                style="@android:style/TextAppearance.Small"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="#33FFFFFF"
                                                android:padding="3dp"
                                                android:text="Upload Left Image"
                                                android:textStyle="bold" />
                                        </RelativeLayout>
                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="7dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="10dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/image_view_vehicle_right"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:adjustViewBounds="true"
                                            android:background="#00BCD4"
                                            android:foreground="@drawable/ripple_anim"
                                            android:scaleType="centerCrop" />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true">

                                            <TextView
                                                style="@android:style/TextAppearance.Small"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="#33FFFFFF"
                                                android:padding="3dp"
                                                android:text="Upload Right Image"
                                                android:textStyle="bold" />
                                        </RelativeLayout>
                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            style="@android:style/TextAppearance.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Details"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/colorLine" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/plate_info" />

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                            app:borderColor="#00BCD4"
                            app:borderWidth="2dp"
                            app:cornerRadius="10dp">

                            <EditText
                                android:id="@+id/edit_text_plate_number"
                                style="@android:style/TextAppearance.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Plate number ie. ABC-1234"
                                android:maxLength="8" />
                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/vehicle_info" />

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                            app:borderColor="#00BCD4"
                            app:borderWidth="2dp"
                            app:cornerRadius="10dp">

                            <EditText
                                android:id="@+id/edit_text_vehicle_name"
                                style="@android:style/TextAppearance.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Vehicle name ie. Suzuki Mehran"
                                android:inputType="textCapWords" />
                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                            app:borderColor="#00BCD4"
                            app:borderWidth="2dp"
                            app:cornerRadius="10dp">

                            <EditText
                                android:id="@+id/edit_text_vehicle_model"
                                style="@android:style/TextAppearance.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Vehicle Model ie. 2010"
                                android:inputType="number"
                                android:maxLength="4" />
                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                            app:borderColor="#00BCD4"
                            app:borderWidth="2dp"
                            app:cornerRadius="10dp">

                            <EditText
                                android:id="@+id/edit_text_vehicle_color"
                                style="@android:style/TextAppearance.Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Paint job ie. White"
                                android:inputType="textCapWords" />
                        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/button_previous"
                        style="@android:style/TextAppearance.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:text="Previous"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/button_proceed"
                        style="@android:style/TextAppearance.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="Proceed"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>